{
    "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
    "name": "HiveLang",
    "scopeName": "source.hive",
    "patterns": [
        {
            "include": "#comments"
        },
        {
            "include": "#decorators"
        },
        {
            "include": "#keywords"
        },
        {
            "include": "#strings"
        },
        {
            "include": "#numbers"
        },
        {
            "include": "#operators"
        },
        {
            "include": "#variables"
        }
    ],
    "repository": {
        "comments": {
            "patterns": [
                {
                    "name": "comment.line.number-sign.hive",
                    "match": "#.*$"
                }
            ]
        },
        "decorators": {
            "patterns": [
                {
                    "name": "entity.name.tag.hive",
                    "match": "@(bot|description|model|capability|trigger|action|on_message|on_start|on_schedule|require|integration|webhook|variable|const|env|secret|param|return|example|deprecated|version|author|license)\\b"
                },
                {
                    "name": "entity.name.function.decorator.hive",
                    "match": "@[a-zA-Z_][a-zA-Z0-9_]*"
                }
            ]
        },
        "keywords": {
            "patterns": [
                {
                    "name": "keyword.control.hive",
                    "match": "\\b(if|else|elif|for|while|break|continue|return|await|async|try|catch|throw)\\b"
                },
                {
                    "name": "keyword.operator.hive",
                    "match": "\\b(and|or|not|in|is|as)\\b"
                },
                {
                    "name": "keyword.other.hive",
                    "match": "\\b(respond|with|ai|context|tone|using|call|send|fetch|store|get|set|emit|log|print|debug|error|warn)\\b"
                },
                {
                    "name": "constant.language.hive",
                    "match": "\\b(true|false|null|none|undefined)\\b"
                },
                {
                    "name": "storage.type.hive",
                    "match": "\\b(string|number|boolean|array|object|any|void)\\b"
                }
            ]
        },
        "strings": {
            "patterns": [
                {
                    "name": "string.quoted.double.hive",
                    "begin": "\"",
                    "end": "\"",
                    "patterns": [
                        {
                            "name": "constant.character.escape.hive",
                            "match": "\\\\."
                        },
                        {
                            "name": "variable.other.placeholder.hive",
                            "match": "\\{[^}]+\\}"
                        }
                    ]
                },
                {
                    "name": "string.quoted.single.hive",
                    "begin": "'",
                    "end": "'",
                    "patterns": [
                        {
                            "name": "constant.character.escape.hive",
                            "match": "\\\\."
                        }
                    ]
                }
            ]
        },
        "numbers": {
            "patterns": [
                {
                    "name": "constant.numeric.hive",
                    "match": "\\b[0-9]+(\\.[0-9]+)?\\b"
                }
            ]
        },
        "operators": {
            "patterns": [
                {
                    "name": "keyword.operator.assignment.hive",
                    "match": "=|:="
                },
                {
                    "name": "keyword.operator.comparison.hive",
                    "match": "==|!=|<=|>=|<|>"
                },
                {
                    "name": "keyword.operator.arithmetic.hive",
                    "match": "\\+|-|\\*|/|%"
                },
                {
                    "name": "punctuation.definition.hive",
                    "match": ":|,|\\.|->|=>"
                }
            ]
        },
        "variables": {
            "patterns": [
                {
                    "name": "variable.parameter.hive",
                    "match": "\\$[a-zA-Z_][a-zA-Z0-9_]*"
                },
                {
                    "name": "variable.other.hive",
                    "match": "\\b[a-z_][a-zA-Z0-9_]*\\b"
                }
            ]
        }
    }
}